<% unless controller.is_embed? %>
<div class="festival-logo" style="margin:-15px -15px 0 -15px; text-align:center; background:#000;">
  <img src="<%= image_path('cinematik2013.png') %>" alt="Logo">
</div>
<% end %>

<%= form_tag jqm_search_url, method: :post do %>
  <div data-role="fieldcontain" class="ui-hide-label">
    <label for="search">Hľadať film podľa názvu:</label>
    <input type="search" name="search" id="search" value="" data-mini="true" placeholder="Hľadať film podľa názvu..." />
  </div>
<% end %>

<h3><center>Vyberte si deň</center></h3>

<ul data-role="listview" data-inset="true">
  <% @days.each do |d| %>
  <li>
    <%= link_to formated_date(d.date), jqm_day_path(d.date) %>
  </li>
  <% end %>
</ul>

<h3><center>Vyberte si sálu</center></h3>

<ul data-role="listview" data-inset="true">
  <% @stages.each do |s| %>
  <li>
    <%= link_to s.name, jqm_stage_path(s) %>
  </li>
  <% end %>
</ul>

<% if @sections.any? %>
  <h3><center>Sekcie</center></h3>

  <ul data-role="listview" data-inset="true">
    <% @sections.each do |s| %>
    <li>
      <%= link_to s.name, jqm_section_path(s) %>
    </li>
    <% end %>
  </ul>
<% end %>