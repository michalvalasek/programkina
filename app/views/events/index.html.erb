<h2>Správa programu pre scénu: <%= @stage.name %></h2>

<div class="above-table">
  <h3>Predstavenia</h3>
  <%= link_to "Pridať predstavenie", new_stage_event_path(@stage), :class=>"bigbutton" %></p>
</div>

<table cellpadding="0" cellspacing="0" width="100%" class="sortable" id="stages-list">
  <tr>
    <th>Názov</th>
    <th></th>
  </tr>

  <% @events.each do |event| %>
    <tr class="<%= cycle("even","odd") %>">
      <td><%= event.title %></td>
      <td>
        <%= link_to 'Zobraziť detaily', stage_event_path(@stage, event) %>
        <%= link_to 'Upraviť', edit_stage_event_path(@stage, event) %>
        <%= link_to 'Zmazať', stage_event_path(@stage, event), confirm: 'Naozaj chcete zmazať toto predstavenie?', method: :delete %>
      </td>
    </tr>
  <% end %>
</table>