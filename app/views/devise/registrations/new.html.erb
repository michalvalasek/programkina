<h2 style="padding: 0 20px 15px;">Registrácia</h2>

<% resource.build_account #dirty but pragmatic in this case - devise controllers are tough to extend %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  
  <p>
    <%= f.label :email, "E-mail, na ktorý bude registrovaný tento účet" %><br />
    <%= f.email_field :email, class: "text" %>
  </p>

  <p>
    <%= f.label :password, "Zvoľte si heslo" %><br />
    <%= f.password_field :password, class: "text" %>
  </p>

  <p>
    <%= f.label :password_confirmation, "Zopakujte zvolené heslo" %><br />
    <%= f.password_field :password_confirmation, class: "text" %>
  </p>
  
  <%= f.fields_for :account do |af| %>
    <p>
      <%= af.label :account_type, "Typ účtu" %><br />
      <%= af.radio_button :account_type, Account::TYPE_THEATER %> Kino
      <%= af.radio_button :account_type, Account::TYPE_FESTIVAL %> Festival
    </p>
    
    <p>
      <%= af.label :name, "Názov účtu (napr. názov kina alebo festivalu)" %><br />
      <%= af.text_field :name, class: "text" %>
    </p>
  <% end %>

  <p class="formend">
    <%= f.submit "Zaregistrovať", class: "submit" %>
    <%= link_to "Zrušiť", root_path %>
  </div>
<% end %>